<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEFA"
    android:orientation="vertical" >

    <include
        android:id="@+id/tape_title"
        layout="@layout/title_layout" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sys_clock_title"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="System Clock"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
          <CheckBox
            android:id="@+id/date_cb"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/sys_clock_date"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Date:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/sys_clock_date_value"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="2017-05-24"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="1"
        	android:singleLine="true"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/sys_clock_date_value_set"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/more_acc" />
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
           <CheckBox
            android:id="@+id/time_cb"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/sys_clock_time"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Time:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/sys_clock_time_value"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="14:32:33"
            android:layout_marginLeft="10dp"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="1"
        	android:singleLine="true"
            android:textColor="#FF0000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/sys_clock_time_value_set"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/more_acc" />
    </LinearLayout>
    

     
     <TextView
            android:id="@+id/meter_clock_title"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Meter Clock"
            android:textSize="28sp" />
     
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/meter_clock_date"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Meter Date:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/meter_clock_date_value"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="2017-05-24"
            android:textColor="#FF0000"
            android:textSize="20sp" />


    </LinearLayout>
    
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/meter_clock_time"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Meter Time:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/meter_clock_time_value"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="14:37:38"
            android:textColor="#FF0000"
            android:textSize="20sp" />


    </LinearLayout>
    
           <View
        android:layout_width="fill_parent"
        android:layout_height="20dp" />
    
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/time_read_btn"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:background="@color/btn_default"
            android:text="Read" />
        
         <Button
            android:id="@+id/time_write_btn"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:background="@color/btn_default"
            android:text="Write" />

        <Button
            android:id="@+id/time_back_btn"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:background="@color/btn_default"
            android:text="Return" />
    </LinearLayout>

</LinearLayout>