<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wzb.hhu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    
     <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".interf.WApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity 
            android:name=".activity.LoginNewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activity.MainActivity"
            />
          <activity
            android:name=".activity.ReadDataActivity"
            />
          
          <activity
              android:name=".activity.EventLogActivity"/>
          
          <activity
              android:name=".activity.SettingTimeActivity"/>
          
           <activity
              android:name=".activity.UserManagerActivity"/>
           
           <activity
              android:name=".activity.SettingActivity"/>
           
           <activity
              android:name=".activity.UserAddActivity"/>
           <activity
              android:name=".activity.UserEditActivity"/>
           
        <activity
            android:name=".activity.AmmeterListActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden"
            />
        
        <activity
            android:name="com.wzb.spp.DeviceList"/>
        
        <activity
            android:name="com.wzb.spp.test.SimpleActivity"/>
        
        <receiver 
            android:name="com.wzb.hhu.btcore.BtManager"
             android:enabled="true">
            <intent-filter>
              <action android:name="com.wzb.hhu.ACTION_CONNETION_ADDRESS"/>
              <action android:name="com.wzb.hhu.ACTION_OPEN_BT"/>
              
            </intent-filter>
        </receiver>
    </application>

</manifest>
